{
  "policies": [
    {
      "_name": "Basic name",
      "_comment": "",
      "cron": "0 */3 * ? * *",
      "mode": "exclude",
      "directories": {
        "tmp": [
          "books"
        ]
      },
      "validator": "LastModified",
      "repos": [
        "Library",
        "build"
      ],
      "interval": 2,
      "intervalType": "outer",
      "dryRun": true
    },
    {
      "cron": "0 0 1 ? * 1",
      "mode": "include",
      "validator": "LastDownloaded",
      "repos": [
        "tmp"
      ],
      "interval": 1,
      "intervalType": "outer",
      "dryRun": true
    }
  ]
}
